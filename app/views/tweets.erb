<% if @tweet == [] %>
  <h3>Welcome, <% @user.username %>, you have no tweets yet</h3>
  <a href="/tweet">New Tweet</a> or <a href="/logout">Log Out</a>
<% else %>
  <h3>Welcome, <% @user.username %>, here are your tweets!</h3>
  <a href="/tweet">New Tweet</a> or <a href="/logout">Log Out</a><br>
  <br>
  <% @tweet.each do |t| %>
    <a href="/tweets/<%= t.id %>"><%= t.content %></a><br>
    <br>
  <% end %>
<% end %>
